{
    "extends": "eslint-config-airbnb",
    "env": {
        "browser": true
    },
    "parser": "babel-eslint",
    "rules": { // comma stuff
        "comma-dangle": [
            "error",
            "never"
        ],
        // for indent types
        "indent": [
            "error",
            4
        ],
        // something with LF and CRLF formating
        "linebreak-style": 0,
        // allow jsx in files with .js
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [
                    ".js",
                    ".jsx"
                ]
            }
        ],
        "react/jsx-indent": [
            2,
            4
        ], // more indent stuff?
        "jsx-quotes": [
            "error",
            "prefer-single"
        ]
    },
    "settings": {
        "import/parser": "babel-eslint"
    }
}
